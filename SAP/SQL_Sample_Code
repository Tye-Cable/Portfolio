# Sample SQL code written for Gun_Violence data


# What is the number of incidents where someone was killed by state?

select state, count(n_killed)
from incident_info
where n_killed != 0
group by state;

# What is the total number of incidents where someone was either killed or injured by state?

select state, sum(n_killed) + sum(n_injured) as Total 
from incident_info
group by state; 

#Safest from gun violence?

select state, sum(n_killed) + sum(n_injured) as Total 
from incident_info
group by state
order by Total asc; 

#Worst for gun violence?

select state, sum(n_killed) + sum(n_injured) as Total 
from incident_info
group by state
order by Total desc; 